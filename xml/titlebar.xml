<!-- =======================================================================================================
  <Wasabi:TitleBar /> implmentation
    Available parameters :
      - All params for Group
      - All params for Text
    Required objects : (these objects are manipulated by the script, so overriding with script content inheritance
                       will require you to have these objects. Otherwise, you should be fine)
      - Group id="wasabi.titlebar.streak.left"
      - Group id="wasabi.titlebar.streak.right"
      - Layer id="mousetrap" (this object shoud cover the content of the group)
======================================================================================================== -->

<groupdef id="wasabi.titlebar" xuitag="Wasabi:TitleBar" embed_xui="window.titlebar.title" relatw="1" w="-35">

  <text id="window.titlebar.title.active" x="23" y="-8" relatw="1" w="-35" h="42" default=":componentname" font="vgasys2" fontsize="11"
    color="wasabi.text.active" activealpha="255" inactiveAlpha="0" forceuppercase="0" antialias="0" align="center"/>

  <text id="window.titlebar.title.inactive" x="23" y="-8" relatw="1" w="-35" h="42" default=":componentname" font="vgasys2" fontsize="11"
    color="wasabi.text.inactive" activealpha="0" inactiveAlpha="255" forceuppercase="0" antialias="0" align="center"/>

  <layer id="mousetrap" x="0" y="2" w="0" h="-10" relatw="1" relath="1" image="none" move="1" cursor="cur.move"/>
</groupdef>



